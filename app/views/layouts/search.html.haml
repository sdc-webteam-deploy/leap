!!!
%html
  %head
    %title 
      Leap
      - if params[:q]
        = " : search for #{params[:q]}"
    = stylesheet_link_tag 'screen', :media => 'screen, projection'
    = stylesheet_link_tag 'print', :media => 'print'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie', :media => 'screen, projection'
    /[if lt IE 9]
      = stylesheet_link_tag 'ie8', :media => 'screen, projection'
      = javascript_include_tag 'html5'
    = javascript_include_tag "application"
    = csrf_meta_tag
    - unless Settings.google_analytics_code.empty?
      = render :partial => "layouts/ganalytics"
  %body
    #top_bar
      .inner
        #login_name.search
          = link_to person_url(@user) do
            .left
              = image_tag("#{url_for(@user)}.jpg")
            .right
              = @user.forename
              %br
              = @user.surname
    .container#main_container
      #full_pane= yield
      #footer= render :partial => "layouts/footer"
