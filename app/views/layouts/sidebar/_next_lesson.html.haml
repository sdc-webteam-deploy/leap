#next-lesson.col-xs-12.panel{"data-link" => person_timetables_url(@topic, :date => next_lesson.timetable_start)}
  %h5{:style => "color: #eea; margin-top:0px;"} 
    %strong Next lesson:  
    = next_lesson.title
  %h5
    %i.fa.fa-fw.fa-calendar
    = pretty_date(next_lesson.timetable_start, day: true)
    .pull-right
      %i.fa.fa-fw.fa-mortar-board
      %em= next_lesson.teachers.join(",")
  %h6
    %i.fa.fa-fw.fa-clock-o
    = next_lesson.timetable_start.to_s(:time)
    &ndash;
    = next_lesson.timetable_end.to_s(:time)
    .pull-right
      %i.fa.fa-fw.fa-map-marker
      = next_lesson.rooms.join (",")
