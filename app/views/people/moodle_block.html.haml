%h3
  Moodle Courses
  = link_to image_tag("moodle.png"), "#{Settings.moodle_host}#{Settings.moodle_path}"
.span4
  - if @moodle_courses
    .scroll-list
      - @moodle_courses.each do |mdl|
        .mdl_course{:style => "font-weight: #{mdl[:canedit] ? "bold" : "normal"}"}
          = link_to("#{Settings.moodle_host}#{Settings.moodle_path}/course/view.php?id=#{mdl[:id]}",
                      {:target => Settings.moodle_link_target})  do
            %i.fa.fa-mortar-board.fa-fw
            = mdl[:name]
  - else
    - if Rails.env == "development"
      .alert.alert-warning
        %i.icon-ban-circle
        Moodle integration is not currently available in test mode
    - else
      .alert Moodle is currently unavailable.
