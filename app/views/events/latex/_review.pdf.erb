  <% if count_quality > 0 then %>&\centering\begin{sideways}<%= Settings.review_cat_quality %>\end{sideways}<% end %>
  <% if count_punctuality > 0 then %>&\centering\begin{sideways}<%= Settings.review_cat_punctuality %>\end{sideways}<% end %>
  <% if count_attitude > 0 then %>&\centering\begin{sideways}<%= Settings.review_cat_attitude %>\end{sideways}<% end %>
