  <% count_quality += 1 unless rl.quality.blank? or rl.quality.nil? %>
  <% count_punctuality += 1 unless rl.punctuality.blank? or rl.punctuality.nil? %>
  <% count_attitude += 1 unless rl.attitude.blank? or rl.attitude.nil? %>
  <% count_completion += 1 unless rl.completion.blank? or rl.completion.nil? %>
<% end %>

\subsection*{Review}
