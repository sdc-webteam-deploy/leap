  <% unless rl.attitude.blank? or rl.attitude.nil? %>&\centering\begin{sideways}<%= grades[rl.attitude] %>\end{sideways}<% end %>
  <% unless rl.completion.blank? or rl.completion.nil? %>&\centering\begin{sideways}<%= grades[rl.completion] %>\end{sideways}<% end %>
